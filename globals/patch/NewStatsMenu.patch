    ADDI    A3, A3, FFFB % -7`
    LBU     T0, 8 (S0)
    ADDI    T0, T0, 3 % Style
    JAL     $DrawBox
    LBU     T1, 9 (S0) % Opacity
    .End
    POP     RA, A0, A1, A2, A3, T0, T1, S0
