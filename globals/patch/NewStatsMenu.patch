% Load new styles
@Hook 8E810 % 800F5360
{
    % A1 - Box Style ID
    % Check if the ID is above 0x16, so is one of our new styles
    SLTIU   V0, A1, 17
    BNE     V0, R0, .VanillaStyle
    NOP
    % get new style
    ORI     V0, R0, 17
    BEQ     A1, V0, .HPBox
    ORI     V0, R0, 18
    BEQ     A1, V0, .FPBox
    ORI     V0, R0, 19
    BEQ     A1, V0, .CoinsBox
    ORI     V0, R0, 1A
    BEQ     A1, V0, .StarBox
    NOP
    BEQ     R0, R0, .VanillaStyle
    NOP
    % T1 = Box Data Pointer
    .HPBox
    LIO     T1, $BoxData_HP
    BEQ     R0, R0, .End
    RESERVED
    .FPBox
    LIO     T1, $BoxData_FP
    BEQ     R0, R0, .End
    RESERVED
    .CoinsBox
    LIO     T1, $BoxData_Coins
    BEQ     R0, R0, .End
    RESERVED
    .StarBox
    LIO     T1, $BoxData_StarPower
    BEQ     R0, R0, .End
    RESERVED
    % If was one of the vanilla styles
    .VanillaStyle
    SLL	    V0, A1, 1
    ADDU	V0, V0, A1
    SLL	    V0, V0, 2
    SUBU	V0, V0, A1
    ADDU	T1, V0, V1
    .End
