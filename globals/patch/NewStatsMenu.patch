% Draw all new boxes (placed where the 1st half of the stats menu was before)
@Hook 81B60 % 800E86B0
{
    PUSH    RA, A0, A1, A2, A3, T0, T1, S0
    % Draw HP Box
    LIO     S0, $Data_FirstBox_Coords
    LH      A0, 0 (S0) % x
    LAH     A1, 8010EF8E % stats bar y offset
    LHU     A2, 4 (S0) % SizeX
    LHU     A3, 6 (S0) % SizeY
    LBU     T0, 8 (S0) % Style
    JAL     $DrawBox
    LBU     T1, 9 (S0) % Opacity
    % Draw FP Box
    LH      A0, 0 (S0)
    ADDI    A0, A0, 57 % x
    LAH     A1, 8010EF8E % stats bar y offset
    LHU     A2, 4 (S0) % SizeX
    ADDI    A2, A2, FFF4 % -12`
    LHU     A3, 6 (S0) % SizeY
    LBU     T0, 8 (S0)
    ADDI    T0, T0, 1 % Style
    JAL     $DrawBox
    LBU     T1, 9 (S0) % Opacity
    % Draw SP/Coins Box
    LH      A0, 0 (S0)
    ADDI    A0, A0, A0 % x
    LAH     A1, 8010EF8E % stats bar y offset
    LHU     A2, 4 (S0) 
    ADDI    A2, A2, 2C % SizeX
    LHU     A3, 6 (S0) % SizeY
    LBU     T0, 8 (S0)
    ADDI    T0, T0, 2 % Style
    JAL     $DrawBox
    LBU     T1, 9 (S0) % Opacity
    % Draw Star Power Box if the player have at least 1 star spirit
